<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletAcceso</servlet-name>
        <servlet-class>controlador.ServletAcceso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletSuperUsuario</servlet-name>
        <servlet-class>controlador.ServletSuperUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletJugador</servlet-name>
        <servlet-class>controlador.ServletJugador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletEquipo</servlet-name>
        <servlet-class>controlador.ServletEquipo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDetalle</servlet-name>
        <servlet-class>controlador.ServletDetalle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAcceso</servlet-name>
        <url-pattern>/procesoAcceso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletSuperUsuario</servlet-name>
        <url-pattern>/procesoSuperUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletJugador</servlet-name>
        <url-pattern>/procesoJugador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletEquipo</servlet-name>
        <url-pattern>/procesoEquipo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDetalle</servlet-name>
        <url-pattern>/procesoDetalle</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
